NAME="libmpdclient"
VERSION=2.8
RELEASE=1
CATEGORY="Libs"
SUMMARY="Music Player Daemon client library"
DESCRIPTION="A stable, asynchronous API for interfacing with the Music
Player Daemon."
HOMEPAGE="http://www.musicpd.org/"
SRC_URI="http://www.musicpd.org/download/libmpdclient/2/${NAME}-${VERSION}.tar.bz2"

PKG_NAMES="${NAME}2 ${NAME}-devel vala-${NAME}"
libmpdclient2_REQUIRES="mpd"
libmpdclient2_CONTENTS="--exclude=html usr/bin/cygmpdclient-2.dll usr/share/doc/"
libmpdclient_devel_CONTENTS="usr/include/ usr/lib/ usr/share/doc/${NAME}/html/"
vala_libmpdclient_CONTENTS="usr/share/vala/vapi/libmpdclient.*"

KEEP_LA_FILES="none"
